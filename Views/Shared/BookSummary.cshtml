@model Book

<div class="col-sm-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.BookTitle</h5>
            <p class="card-text"><b>Publisher: </b>@Model.BookPublisher</p>
            <p class="card-text"><b>ISBN: </b>@Model.BookISBN</p>
            <p class="card-text"><b>Category: </b>@Model.BookCategory</p>
            <p class="card-text"><b>Pages: </b>@Model.BookPages</p>
            <form id="@Model.BookID" asp-page="/Cart" method="post">
                <input type="hidden" asp-for="BookID" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span class="card-text p-1">
                    @Model.BookTitle
                    <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                        Add to Cart
                    </button>
                </span>
            </form>
        </div>
    </div>

    
</div>